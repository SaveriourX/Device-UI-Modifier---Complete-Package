javascript:(function() {    var successBox = document.createElement('div');    successBox.className = 'success-box';    successBox.innerHTML = `        <h2>Operation Successful</h2>        <p>Your local device history has been cleared.</p>        <ul>            <li>Cleared Cookies</li>            <li>Cleared Browsing History</li>            <li>Cleared Session Storage</li>        </ul>    `;    successBox.style.position = 'fixed';    successBox.style.top = '0';    successBox.style.left = '0';    successBox.style.width = '100%';    successBox.style.height = '100%';    successBox.style.display = 'flex';    successBox.style.flexDirection = 'column';    successBox.style.alignItems = 'center';    successBox.style.justifyContent = 'center';    successBox.style.backgroundColor = 'black';    successBox.style.color = '#03ecfc';    successBox.style.animation = 'slideIn 0.5s ease-in forwards';    var styleSheet = document.createElement('style');    styleSheet.innerHTML = %60        @keyframes slideIn {            0% {                opacity: 0;                transform: scale(0);            }            100% {                opacity: 1;                transform: scale(1);            }        }    %60;    document.head.appendChild(styleSheet);    document.body.appendChild(successBox);    setTimeout(function() {        successBox.style.animation = 'zoomOut 0.5s ease-in forwards';        localStorage.clear();        sessionStorage.clear();        document.cookie.split(';').forEach(function(cookie) {            document.cookie = cookie.replace(/^ +/, '').replace(/=.*/, '=;expires=' + new Date().toUTCString() + ';path=/');        });        history.pushState({}, '', '');        setTimeout(function() {            location.reload();        }, 500);    }, 1500);    var styleSheetExit = document.createElement('style');    styleSheetExit.innerHTML = %60        @keyframes zoomOut {            0% {                opacity: 1;                transform: scale(1);            }            100% {                opacity: 0;                transform: scale(1.5);            }        }    %60;    document.head.appendChild(styleSheetExit);})();
