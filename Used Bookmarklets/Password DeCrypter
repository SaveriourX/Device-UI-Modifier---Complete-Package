javascript:(function() {  var passwords = document.querySelectorAll('input[type="password"]');  var decryptedPasswords = [];    var popUpDiv = document.createElement('div');  popUpDiv.className = 'password-popup';  popUpDiv.style.position = 'fixed';  popUpDiv.style.top = '-100%';  popUpDiv.style.left = '10px';  popUpDiv.style.width = '300px';  popUpDiv.style.maxHeight = '300px';  popUpDiv.style.overflow = 'auto';  popUpDiv.style.backgroundColor = 'black';  popUpDiv.style.color = '#03ecfc';  popUpDiv.style.borderRadius = '10px';  popUpDiv.style.boxShadow = '0 0 10px #03ecfc';  popUpDiv.style.padding = '20px';  popUpDiv.style.fontFamily = 'Arial, sans-serif';  popUpDiv.style.zIndex = '999999';  popUpDiv.innerHTML = '<h2>Decrypted Passwords:</h2>';  for (var i = 0; i < passwords.length; i++) {    var password = passwords[i].value;    if (password) {      decryptedPasswords.push(password);      popUpDiv.innerHTML += '<p>' + password + '</p>';    }  }  if (decryptedPasswords.length === 0) {    popUpDiv.innerHTML += '<p>No passwords found on this page.</p>';  }  var closeButton = document.createElement('button');  closeButton.innerText = 'Close';  closeButton.style.width = 'calc(100% - 20px)';  closeButton.style.marginTop = '10px';  closeButton.style.padding = '5px 10px';  closeButton.style.backgroundColor = '#00d7ff';  closeButton.style.color = '#000000';  closeButton.style.border = 'none';  closeButton.style.borderRadius = '5px';  closeButton.style.transition = 'background-color 0.3s';  closeButton.addEventListener('mouseenter', function() {    closeButton.style.backgroundColor = '#0066cc';  });  closeButton.addEventListener('mouseleave', function() {    closeButton.style.backgroundColor = '#00d7ff';  });  closeButton.addEventListener('click', function() {    popUpDiv.style.animation = 'slideOut 0.5s forwards';    setTimeout(function() {      popUpDiv.remove();    }, 500);  });  popUpDiv.appendChild(closeButton);  document.body.appendChild(popUpDiv);  popUpDiv.style.animation = 'slideIn 0.5s forwards';  document.addEventListener('keydown', function(event) {    if (event.key === 'Escape') {      popUpDiv.style.animation = 'slideOut 0.5s forwards';      setTimeout(function() {        popUpDiv.remove();      }, 500);    }  });    var styleSheet = document.createElement('style');  styleSheet.innerHTML = %60    @keyframes slideIn {      0% {        top: -100%;      }      100% {        top: 10px;      }    }        @keyframes slideOut {      0% {        top: 10px;      }      100% {        top: -100%;      }    }  %60;  document.head.appendChild(styleSheet);})();
